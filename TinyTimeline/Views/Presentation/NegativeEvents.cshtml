@model TinyTimeline.Models.PresentationModel

@if (Model.Events.Any())
{
    foreach (var e in Model.Events)
    {
        <div>
            @Html.DisplayFor(m => e.Date):
            @e.Text;
            -(@e.Negative)
        </div>
    }
}
else
{
    <div>
        <label>Good news - no negative events, but you can change it, so @Html.ActionLink("vote for events!", "Voting", "Interaction")</label>
    </div>
}